{
  "name": "webview",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "preinstall": "npx -y only-allow pnpm",
    "verify-deps": "npx pnpm i --frozen-lockfile --prefer-offline",
    "dev": "npm run build-only --watch",
    "build": "run-p type-check \"build-only {@}\" --",
    "preview": "vite preview",
    "test:unit": "vitest",
    "build-only": "vite build",
    "type-check": "vue-tsc --build --force",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --ignore-path .gitignore --cache --cache-location node_modules/.cache/eslint",
    "lintfix": "npm run lint -- --fix && prettier --write . \"!pnpm-lock.yaml\" \"!**/assets\""
  },
  "dependencies": {
    "@vscode/webview-ui-toolkit": "^1.4.0",
    "@vueuse/core": "^10.8.0",
    "highlight.js": "^11.9.0",
    "javascript-time-ago": "^2.5.9",
    "pinia": "^2.1.7",
    "vue": "^3.3.10",
    "vue3-markdown-it": "^1.0.10"
  },
  "devDependencies": {
    "@rushstack/eslint-patch": "^1.3.3",
    "@tsconfig/node18": "^18.2.2",
    "@types/javascript-time-ago": "^2.0.8",
    "@types/jsdom": "^21.1.6",
    "@types/node": "^18.19.2",
    "@vitejs/plugin-vue": "^4.5.1",
    "@vue/eslint-config-prettier": "^8.0",
    "@vue/eslint-config-typescript": "^12.0",
    "@vue/test-utils": "^2.4.3",
    "@vue/tsconfig": "^0.4.0",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.49",
    "eslint-plugin-vue": "^9.17",
    "jsdom": "^23.0.1",
    "npm-run-all2": "^6.1.1",
    "postcss": "^8.4.32",
    "prettier": "^3.0.3",
    "tailwindcss": "^3.4.0",
    "typescript": "~5.2.0",
    "vite": "^5.0.5",
    "vitest": "^1.0.1",
    "vue-tsc": "^1.8.25"
  }
}
