{
  "version": "0.0.1",
  "name": "radicle-vscode-extension",
  "displayName": "radicle-vscode-extension",
  "description": "Radicle extension for VS Code",
  "keywords": [
    "radicle",
    "vscode",
    "extension",
    "maninak"
  ],
  "publisher": "Radicle IDE Plugins Team",
  "author": "Konstantinos Maninakis <konstantinos.maninakis@sclable.com>",
  "contributors": [
    "Konstantinos Maninakis <konstantinos.maninakis@sclable.com>"
  ],
  "license": "SEE LICENSE IN ./LICENSE",
  "repository": "https://github.com/cytechmobile/radicle-vscode-extension",
  "bugs": "https://github.com/cytechmobile/radicle-vscode-extension/issues?q=is%3Aissue+is%3Aopen+sort%3Aupdated-desc",
  "engines": {
    "vscode": "^1.74.0",
    "npm": "^7"
  },
  "categories": [
    "Other"
  ],
  "scripts": {
    "preinstall": "npx -y only-allow pnpm",
    "prepare": "husky install",
    "vscode:prepublish": "npm run verify-deps && npm run test && npm run lint && npm run build",
    "verify-deps": "npx pnpm i --frozen-lockfile --prefer-offline",
    "build": "tsc",
    "dev": "npm run verify-deps && npm run build -- --watch --sourceMap",
    "test": "echo \"Testing not yet implemented.\"",
    "lint": "eslint . --ext .js,.ts --max-warnings 0 --cache --cache-location node_modules/.cache/eslint"
  },
  "main": "./dist/src/extension.js",
  "activationEvents": [],
  "contributes": {
    "commands": [
      {
        "command": "extension.push",
        "title": "Push local changes to the network",
        "shortTitle": "Push",
        "category": "Radicle",
        "icon": "$(rad-push)"
      },
      {
        "command": "extension.pull",
        "title": "Pull latest changes from the network and apply onto working copy",
        "shortTitle": "Pull",
        "category": "Radicle",
        "icon": "$(rad-pull)"
      },
      {
        "command": "extension.sync",
        "title": "Synchronize local and network changes",
        "shortTitle": "Sync",
        "category": "Radicle",
        "icon": "$(rad-sync)"
      },
      {
        "command": "extension.showExtensionLog",
        "title": "Show everything the extension has logged",
        "shortTitle": "Extension log",
        "category": "Radicle",
        "icon": "$(output)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "radicle",
          "title": "Radicle",
          "icon": "$(radicle-logo)"
        }
      ]
    },
    "views": {
      "radicle": [
        {
          "id": "rad-commands",
          "name": "rad CLI Commands",
          "icon": "$(radicle-logo)"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "rad-commands",
        "contents": "Use the buttons below to perform basic interactions with the Radicle network.\n[$(rad-push) Push](command:extension.push)\n[$(rad-pull) Pull](command:extension.pull)\n[$(rad-sync) Sync](command:extension.sync)\nNOTE:\nIn order to use Radicle commands you need to have rad CLI installed on your machine and have the current worskpace published on the Radicle network.\nTo learn more, please follow the [Getting Started Guide](https://radicle.xyz/get-started.html)."
      }
    ],
    "icons": {
      "radicle-logo": {
        "description": "Radicle logo",
        "default": {
          "fontPath": "./assets/radicle-icons.woff",
          "fontCharacter": "A"
        }
      },
      "radicle-logo-encircled": {
        "description": "Radicle logo as negative space inside a circle",
        "default": {
          "fontPath": "./assets/radicle-icons.woff",
          "fontCharacter": "B"
        }
      },
      "rad-push": {
        "description": "Radicle-themed arrow pointing away from user",
        "default": {
          "fontPath": "./assets/radicle-icons.woff",
          "fontCharacter": "C"
        }
      },
      "rad-pull": {
        "description": "Radicle-themed arrow pointing towards user",
        "default": {
          "fontPath": "./assets/radicle-icons.woff",
          "fontCharacter": "D"
        }
      },
      "rad-sync": {
        "description": "Radicle-themed circulating arrows",
        "default": {
          "fontPath": "./assets/radicle-icons.woff",
          "fontCharacter": "E"
        }
      }
    }
  },
  "lint-staged": {
    "*.{ts,js}": "eslint --fix --max-warnings 0 --cache --cache-location node_modules/.cache/eslint"
  },
  "devDependencies": {
    "@types/node": "^18.14.6",
    "@types/vscode": "^1.76.0",
    "@typescript-eslint/eslint-plugin": "^5.54.1",
    "@typescript-eslint/parser": "^5.54.1",
    "eslint": "^8.35.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.1.2",
    "typescript": "^4.9.5"
  },
  "private": true
}
