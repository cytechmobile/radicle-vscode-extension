{
  "version": "0.0.1",
  "name": "radicle-vscode-extension",
  "displayName": "radicle-vscode-extension",
  "description": "Radicle extension for VS Code",
  "keywords": [
    "radicle",
    "vscode",
    "extension",
    "maninak"
  ],
  "publisher": "Radicle IDE Plugins Team",
  "author": "Konstantinos Maninakis <konstantinos.maninakis@sclable.com>",
  "contributors": [
    "Konstantinos Maninakis <konstantinos.maninakis@sclable.com>"
  ],
  "license": "SEE LICENSE IN ./LICENSE",
  "repository": "https://github.com/cytechmobile/radicle-vscode-extension",
  "bugs": "https://github.com/cytechmobile/radicle-vscode-extension/issues?q=is%3Aissue+is%3Aopen+sort%3Aupdated-desc",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "scripts": {
    "preinstall": "npx -y only-allow pnpm",
    "prepare": "husky install",
    "vscode:prepublish": "npm run verify-deps && npm run test && npm run lint && npm run build",
    "verify-deps": "npx pnpm i --frozen-lockfile --prefer-offline",
    "build": "tsc",
    "dev": "npm run verify-deps && npm run build -- --watch --sourceMap",
    "test": "echo \"Testing not yet implemented.\"",
    "lint": "eslint . --ext .js,.ts --max-warnings 0 --cache --cache-location node_modules/.cache/eslint"
  },
  "main": "./dist/extension.js",
  "activationEvents": [],
  "contributes": {
    "commands": [
      {
        "command": "extension.push",
        "title": "Push working copy version to the network",
        "shortTitle": "Push",
        "category": "Radicle"
      },
      {
        "command": "extension.pull",
        "title": "Pull latest version from the network and apply onto working copy",
        "shortTitle": "Pull",
        "category": "Radicle"
      },
      {
        "command": "extension.sync",
        "title": "Synchronize working copy's and network's versions",
        "shortTitle": "Sync",
        "category": "Radicle"
      }
    ]
  },
  "lint-staged": {
    "*.{ts,js}": "eslint --fix --max-warnings 0 --cache --cache-location node_modules/.cache/eslint"
  },
  "devDependencies": {
    "@types/node": "^18.11.18",
    "@types/vscode": "^1.74.0",
    "@typescript-eslint/eslint-plugin": "^5.49.0",
    "@typescript-eslint/parser": "^5.49.0",
    "eslint": "^8.33.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.1.0",
    "typescript": "^4.9.4"
  },
  "private": true
}
